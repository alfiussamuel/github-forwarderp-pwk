<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>			                   		               	           				

    	<!-- Dokumen BC 4.1 -->
		<record id="view_beacukai_outgoing_41_form" model="ir.ui.view">
			<field name="name">Dokumen BC 41</field>
			<field name="model">beacukai.outgoing.41</field>
			<field name="type">form</field>			
			<field name="arch" type="xml">
				<header>
					<button name="action_confirm" states="pengajuan" type="object" string="Masukkan No Registrasi"/>
					<button name="action_receive" states="registrasi" type="object" string="Terima Barang"/>
					<button name="action_done" states="terima" type="object" string="Selesai"/>
					<field name="state" widget="statusbar"/>
				</header>				
				<form string="BC Document 4.1">
					<sheet>
						<div class="oe_button_box" name="button_box">
	                        <button type="object"
	                            name="bc_action_view_picking"
	                            class="oe_stat_button"
	                            icon="fa-truck" attrs="{'invisible':[('state', 'not in', ('terima','done'))]}">
	                            <field name="picking_count" widget="statinfo" string="Pengiriman" help="Incoming Shipments"/>
	                            <field name="picking_ids" invisible="1"/>
	                        </button>
	                    </div>
						<div class="oe_title">
	                        <h1>
	                            <field name="name" readonly="1"/>	                            
	                        </h1>
	                    </div>
						<group>
							<group>							
								<field name="document_type_id" readonly="1"
									options="{'no_create_edit': True, 'no_create': True}"/>
								<field name="date"/>
								<field name="kantor_pabean"
									options="{'no_create_edit': True, 'no_create': True}"/>
								<field name="submission_no"/>									
								<field name="jenis_tpb" readonly="1"/>
							</group>
							<group>								
								<field name="register_number" state="registrasi"/>
								<field name="register_date" required="0"/>
								<field name="delivery_purpose_id"
									options="{'no_create_edit': True, 'no_create': True}"/>
								<field name="delivery_note_number"/>
								<field name="delivery_note_date"/>
								<field name="finish_date"/>
							</group>
						</group>						
						<group>
							<notebook>
								<page string="Data Detail Barang">
									<group>
										<field name="line_ids" attrs="{'readonly': [('state', '!=', 'pengajuan')]}" nolabel="1">
											<tree>
												<field name="product_name"/>
												<field name="product_code"/>
												<field name="product_hs_code"/>
												<field name="product_categ_id"/>
												<field name="product_qty"/>
												<field name="product_uom_id"/>
												<field name="product_country_id"/>
												<field name="cif_cost"/>
											</tree>
											<form>												
												<group>
													<group>
														<field name="product_categ_id"
															options="{'no_create_edit': True, 'no_create': True}"/>
														<field name="kondisi_barang"/>
													</group>
													<group>
														<field name="over_four_years"/>
													</group>
												</group>
												<group string="Data Barang BC 4.1">
													<group>											
														<field name="product_id"
															options="{'no_create_edit': True, 'no_create': True}"/>
														<field name="product_name" invisible="1"/>
													    <field name="product_code"/>
													    <field name="product_hs_code"/>
													    <field name="product_country_id"
													    	options="{'no_create_edit': True, 'no_create': True}"/>
													</group>
													<group>
													    <field name="product_type"/>
													    <field name="product_size"/>
													    <field name="product_brand"
													    	options="{'no_create_edit': True, 'no_create': True}"/>
													    <field name="product_spec"/>							
													</group>
												</group>
												<group string="Satuan dan Harga" col="3">
													<group>											
														<field name="product_incost"/>
														<field name="product_qty"/>
													    <field name="product_uom_id"
													    	options="{'no_create_edit': True, 'no_create': True}"/>
													    <field name="product_netto"/>
													</group>
													<group>
													    <field name="jumlah_kemasan"/>
													    <field name="jenis_kemasan"
													    	options="{'no_create_edit': True, 'no_create': True}"/>
													    <field name="volume"/>
													</group>
													<group>
														<field name="biaya_tambahan"/>
														<field name="cif_cost"/>
													    <field name="cif_amount"/>
													    <field name="harga_penyerahan"/>
													</group>
												</group>
												<group>
													<notebook>
														<page string="Bahan Baku Import">
															<group>
																<field name="bahan_baku_import_ids" nolabel="1">
																	<tree>
																		<field name="product_id"/>
																		<field name="product_code"/>
																		<field name="product_hs_code"/>
																		<field name="product_qty"/>
																		<field name="product_uom_id"/>
																		<field name="harga_cif_idr"/>
																	</tree>
																	<form>
																		<group col="3">
																			<group>											
																				<field name="source_document"/>
																				<field name="source_kppbc"/>
																			</group>
																			<group>
																				<field name="source_no"/>
																				<field name="source_date"/>
																			</group>
																			<group>
																				<field name="source_pengajuan"/>
																				<field name="source_urutan"/>
																			</group>
																		</group>
																		<group string="Data Bahan Baku">
																			<group>											
																				<field name="product_id"
																					options="{'no_create_edit': True, 'no_create': True}"/>
																			    <field name="product_code"/>
																			    <field name="product_type"/>
																			</group>
																			<group>
																			    <field name="product_hs_code"/>
																			    <field name="product_size"/>
																			    <field name="product_brand"
																			    	options="{'no_create_edit': True, 'no_create': True}"/>
																			    <field name="product_spec"/>							
																			</group>
																		</group>
																		<group string="Harga dan Satuan" col="3">
																			<group>											
																				<field name="harga_cif_usd"/>
																				<field name="product_qty"/>
																			</group>
																			<group>
																				<field name="ndpbm"/>
																				<field name="product_uom_id"
																			    	options="{'no_create_edit': True, 'no_create': True}"/>
																			</group>
																			<group>
																				<field name="harga_cif_idr"/>
																				<field name="product_netto"/>
																			</group>
																		</group>
																	</form>
																</field>
															</group>
														</page>
														<page string="Bahan Baku Local">
															<group>
																<field name="bahan_baku_local_ids" nolabel="1">
																	<tree>
																		<field name="product_id"/>
																		<field name="product_code"/>
																		<field name="product_hs_code"/>
																		<field name="product_qty"/>
																		<field name="product_uom_id"/>
																	</tree>
																	<form>
																		<group col="3">
																			<group>											
																				<field name="source_document"/>
																				<field name="source_kppbc"/>
																			</group>
																			<group>
																				<field name="source_no"/>
																				<field name="source_date"/>
																			</group>
																			<group>
																				<field name="source_pengajuan"/>
																				<field name="source_urutan"/>
																			</group>
																		</group>
																		<group string="Data Bahan Baku">
																			<group>											
																				<field name="product_id"
																					options="{'no_create_edit': True, 'no_create': True}"/>
																			    <field name="product_code"/>
																			    <field name="product_type"/>
																			</group>
																			<group>
																			    <field name="product_hs_code"/>
																			    <field name="product_size"/>
																			    <field name="product_brand"
																			    	options="{'no_create_edit': True, 'no_create': True}"/>
																			    <field name="product_spec"/>							
																			</group>
																		</group>
																		<group string="Harga dan Satuan" col="3">
																			<group>											
																				<field name="harga_perolehan"/>
																				<field name="product_qty"/>
																			</group>
																			<group>
																				<field name="harga_penyerahan"/>
																				<field name="product_uom_id"
																			    	options="{'no_create_edit': True, 'no_create': True}"/>
																			</group>
																			<group>														
																				<field name="product_netto"/>
																			</group>
																		</group>
																	</form>
																</field>
															</group>
														</page>	
														<page string="Manufacturing Orders">
															<group>
																<field name="mrp_ids" readonly="1">
																	<tree editable="top">
																		<field name="mrp_id"/>
																	</tree>
																</field>
															</group>
														</page>
													</notebook>
												</group>
											</form>
										</field>
									</group>									
								</page>															
								<page string="Pengusaha TPB dan Pengirim Barang">
									<group string="Pengusaha TPB">
										<group>											
											<field name="company_name"/>
											<field name="company_npwp_type" class="oe_inline"
												options="{'no_create_edit': True, 'no_create': True}"/>
											<field name="company_npwp" class="oe_inline"/>
										</group>
										<group>											
											<field name="company_permission_no"/>
											<field name="company_address"/>
										</group>
									</group>
									<group string="Pengirim Barang">
										<group>
											<field name="supplier_name"/>				
											<field name="supplier_npwp_type" class="oe_inline" 
												options="{'no_create_edit': True, 'no_create': True}"/>
											<field name="supplier_npwp" class="oe_inline"/>
										</group>
										<group>							
											<field name="supplier_address"/>				
										</group>
									</group>															
								</page>
								<page string="Dokumen Pelengkap Pabean">
									<group>
										<group>											
									    	<field name="packing_list_number"/>
									    	<field name="contract_number"/>
									    </group>
									    <group>
									    	<field name="faktur_pajak"/>
									    	<field name="skep"/>
									    </group>
									</group>
									<group string="Surat Keputusan / Dokumen Lainnya">
								    	<field name="surat_keputusan_ids" nolabel="1">
								    		<tree editable="bottom">
								    			<field name="jenis_dokumen"/>
								    			<field name="name"/>
								    			<field name="date"/>
								    		</tree>
								    	</field>
									</group>								    
								</page>		
								<page string="Data Pengangkutan">
									<group>
										<group>									    	
									    	<field name="bruto"/>
									    	<field name="netto"/>
											<field name="cif_harga"/>
											<field name="cif_biaya_tambahan"/>
											<field name="cif_diskon"/>
									    	<field name="cif_cost"/>
											<field name="cif_amount"/>
									    </group>
									    <group>
									    	<field name="cara_angkut_id"
									    		options="{'no_create_edit': True, 'no_create': True}"/>
									    	<field name="nomor_polisi"/>
									    	<field name="ndpbm"/>
									    	<field name="harga_penyerahan"/>
									    </group>									    
									</group>									
									<group string="Kemasan">
										<field name="kemasan_ids" nolabel="1">
											<tree editable="bottom">
												<field name="jumlah"/>
												<field name="kode"/>		
												<field name="uraian"/>
											</tree>
										</field>
									</group>									
								</page>						
								<page string="Footer">
									<group>
										<field name="footer_kota"/>	
										<field name="footer_tanggal"/>
										<field name="footer_pemberitahu"/>
										<field name="footer_jabatan"/>
									</group>
								</page>
								<page string="Packaging Data">
									<group>
										<group>
											<field name="picking_type_id"/>
										</group>
									</group>
								</page>
							</notebook>
						</group>
					</sheet>
					<div class="oe_chatter">
	                    <field name="message_follower_ids" widget="mail_followers"/>
	                    <field name="message_ids" widget="mail_thread"/>
	                </div>																						
				</form>
			</field>
		</record>

		<record id="view_beacukai_outgoing_41_form_warehouse" model="ir.ui.view">
            <field name="name">Dokumen BC 41</field>
            <field name="model">beacukai.outgoing.41</field>
            <field name="inherit_id" ref="v10_bsc_beacukai_sam.view_beacukai_outgoing_41_form" />
            <field name="groups_id" eval="[(6, 0, [ref('stock.group_stock_user')])]" />
            <field name="arch" type="xml">
                <field name="line_ids" position="attributes">
                   <attribute name="attrs">{'readonly': [('state', 'in', ('terima', 'done'))]}</attribute>
                </field>
            </field>
		</record>

		<record id="view_beacukai_outgoing_41_tree" model="ir.ui.view">
			<field name="name">Dokumen BC 41</field>
			<field name="model">beacukai.outgoing.41</field>
			<field name="type">tree</field>			
			<field name="arch" type="xml">
				<tree string="Dokumen BC 4.1">
					<field name="kantor_pabean"/>
					<field name="submission_no"/>
					<field name="jenis_tpb" readonly="1"/>
					<field name="register_number" state="registrasi"/>
					<field name="register_date" required="0"/>
					<field name="delivery_purpose_id"/>
					<field name="state"/>
				</tree>
			</field>
		</record>
		<record id="action_beacukai_outgoing_41" model="ir.actions.act_window">
			<field name="name">Dokumen BC 4.1</field>
			<field name="res_model">beacukai.outgoing.41</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
              	<p class="oe_view_nocontent_create">
	                Click to add a Data
              	</p>				
			</field>
		</record>		

		<record id="view_beacukai_outgoing_line_41_tree" model="ir.ui.view">
			<field name="name">Dokumen BC 4.1 Details</field>
			<field name="model">beacukai.outgoing.line.41</field>
			<field name="type">tree</field>			
			<field name="arch" type="xml">
				<tree string="Detail Dokumen BC 4.1">									   
				    <field name="product_id"/>
				    <field name="product_code"/>
				    <field name="product_hs_code"/>				    				    
				    <field name="product_qty"/>
				    <field name="product_uom_id"/>
				    <field name="product_netto"/>				    
				    <field name="cif_cost"/>
				    <field name="cif_amount"/>
				    <field name="harga_penyerahan"/>
				</tree>
			</field>
		</record>
		<record id="action_beacukai_outgoing_line_41" model="ir.actions.act_window">
			<field name="name">Detail Dokumen BC 4.1</field>
			<field name="res_model">beacukai.outgoing.line.41</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
              	<p class="oe_view_nocontent_create">
	                Click to add a Data
              	</p>				
			</field>
		</record>		
					    		
	</data>
</openerp>