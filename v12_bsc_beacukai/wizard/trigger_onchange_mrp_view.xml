<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--Trigger Onchange-->
        <record id="trigger_onchange_mrp_view" model="ir.ui.view">
            <field name="name">Trigger Onchange</field>
            <field name="model">trigger.onchange.mrp</field>
            <field name="arch" type="xml">
                <form string="Trigger Onchange">
                    <label string="Trigger Onchange"/>
                    <footer>
                        <button string="Confirm" name="button_trigger" type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_trigger_onchange_mrp" model="ir.actions.act_window">
            <field name="name">Trigger Onchange</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">trigger.onchange.mrp</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="trigger_onchange_mrp_view"/>
            <field name="context">{}</field>
            <field name="target">new</field>
            <field name="help">This wizard will Trigger Onchange.</field>
        </record>

        <record model="ir.values" id="trigger_onchange_mrp_values">
            <field name="model_id" ref="mrp.model_stock_move" />
            <field name="name">Trigger Onchange</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('action_trigger_onchange_mrp'))"/>
            <field name="key">action</field>
            <field name="model">stock.move</field>
        </record>

    </data>
</odoo>
