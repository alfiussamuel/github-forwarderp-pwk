				<table class="table table-condensed" style="margin-top:15px;">
					<tr>													
						<td width="100%" style="font-size:18px; text-align:center;padding:1px;border:0px;">
							<strong>DELIVERY ORDER</strong>							
						</td>									
					</tr>											
					<tr>													
						<td width="100%" style="font-size:18px; text-align:center;padding:1px;border:0px;">
