<odoo>
    <data>                                   

        <record id="pwk_packing_list_form" model="ir.ui.view">
            <field name="name">Packing List</field>
            <field name="model">pwk.packing.list</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="%(action_pwk_generate_packing_list)d" type="action" 
                            string="Select Sales Order" class="oe_highlight" states="Draft"/>
                        <button name="print_packing_list_produksi" string="Print"
                            type="object" class="oe_highlight"/>
                        <button name="action_create_picking" string="Create Delivery Order"
                            type="object" class="oe_highlight"
                            attrs="{'invisible':[('is_picking', '=', True)]}"
                            />
                        <field name="state" widget="statusbar" readonly="1"/>
                    </header>
                    <sheet>
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <group>                      
                            <group>      
                                <field name="date" required="1" class="oe_inline"/>
                                <field name="partner_id"/>
                                <field name="destination_id"/>
                                <field name="po_number"/>
                                <field name="marking"/>
                                <field name="payment_term_id"/>
                            </group>
                            <group>
                                <field name="is_logo"/>
                                <field name="certificate_id"
                                    options="{'no_create': True}"/>
                                <field name="tanggal_selesai"/>
                                <field name="tanggal_emisi"/>
                                <field name="tanggal_terakhir"/>
                                <field name="tanggal_pengambilan"/>
                            </group>
                        </group>
                        <group>
                            <notebook>
                                <page string="Detail Packing List">
                                    <field name="line_ids" nolabel="1">
                                        <tree editable="top">
                                            <field name="product_id" required="1"/>
                                            <field name="marking"/>
                                            <field name="crate_number" sum="Total"/>
                                            <field name="crate_qty_each" sum="Total"/>
                                            <field name="quantity" sum="Total"/>
                                            <field name="volume" sum="Total"/>
                                        </tree>
                                        <form>
                                            <group>
                                                <field name="product_id"
                                                    options="{'no_create': True}"/>
                                            </group>
                                            <group>
                                                <group>
                                                    <field name="crate_number"/>
                                                    <field name="crate_qty_each"/>
                                                </group>
                                                <group>
                                                    <field name="quantity"/>
                                                    <field name="volume"/>
                                                </group>
                                            </group>
                                            <group>
                                                <field name="bom_ids" nolabel="1">
                                                    <tree editable="top">
                                                        <field name="product_id"/>
                                                        <field name="thick"/>
                                                        <field name="width"/>
                                                        <field name="length"/>
                                                        <field name="quantity"/>
                                                    </tree>
                                                </field>
                                            </group>
                                        </form>
                                    </field>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>
